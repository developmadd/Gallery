<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragments.GalleryEditor.GalleryEditorFragment"
    android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/IV_Editor"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_edit_black_24dp"
                android:visibility="gone"
                android:background="@color/colorBlackTransparent"
                android:id="@+id/BTN_Editor"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deja presionado y arrastra para ordenar"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/CTNR_Editor_Picture_List"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#FFF"/>

        <Button
            android:id="@+id/BTN_Editor_Accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listo"
            android:textAllCaps="false"
            android:layout_margin="5dp"/>



</LinearLayout>
